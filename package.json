{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/backend/index.tsx",
  "module": "src/backend/index.tsx",
  "scripts": {
    "dev": "bun --hot src/backend/index.tsx",
    "dev:backend": "bun --hot src/backend/index.tsx",
    "dev:frontend": "bun --hot src/frontend/server.ts",
    "build": "bun build ./src/frontend/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/backend/index.tsx",
    "build:frontend": "bun build ./src/frontend/server.ts --outdir=public --target=browser"
  },
  "dependencies": {
    "mongodb": "^6.15.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
