{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/backend/index.tsx",
  "module": "src/backend/index.tsx",
  "scripts": {
    "dev": "bun --hot src/backend/index.tsx",
    "dev:backend": "bun --hot src/backend/index.tsx",
    "dev:frontend": "bun --hot src/frontend/dev-server.ts",
    "build": "bun build ./src/frontend/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/backend/index.tsx",
    "build:frontend": "bun build ./src/frontend/dev-server.ts --outdir=public --target=browser"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.1",
    "@mui/material": "^7.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
